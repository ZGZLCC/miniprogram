---
import '../styles/global.css';

import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import Countdown from '../components/countdown.astro';
import { joinUrl } from '../scripts/url-utils';

const pageTitle = "相爱天数";
const dev = import.meta.env.DEV;
let rootPage;
if (dev) {
  rootPage = import.meta.env.BASE_URL;
}else rootPage = '/';

const giftPage = joinUrl(rootPage, '/gift/');
const daysPage = joinUrl(rootPage, '/miniprogram/days/');
---

<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />
    <Countdown />
    <div class="buttons-container">
        <!-- <button class="button" id="backBtn">返回首页</button> -->
        <a class="button" href={rootPage}>返回首页</a>
    </div>
    <Footer />
  </body>
</html>