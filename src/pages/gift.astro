---
import '../styles/global.css';

import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import Giftshow from '../components/giftshow.astro';
import { joinUrl } from '../scripts/url-utils';

const pageTitle = "今日礼物";

const prod = import.meta.env.PROD;
let rootPage = '/';

const giftPage = joinUrl(rootPage, '/gift/');
const daysPage = joinUrl(rootPage, '/miniprogram/days/');
---

<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
    <link rel="icon" type="image/x-icon" href="/favicon/favicon.ico" />
  </head>
  <body>
    <Header />
    <Giftshow />
    <div class="buttons-container">
       <a class="button" href={rootPage}>返回主页</a>
    </div>

  </body>
</html>